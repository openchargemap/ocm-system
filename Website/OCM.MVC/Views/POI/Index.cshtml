@model OCM.MVC.Models.POIBrowseModel

@{
    ViewBag.Title = "Browse Charging Locations";
}

<h2 data-localize="ocm.general.browsePOI">Browse Charging Locations</h2>

<div class="alert alert-info">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong data-localize="ocm.infoText.tip">Tip:</strong> <span data-localize="ocm.infoText.searching.quickWay">If you just need a quick way to find your nearest charging location you can also try our</span> <a href="http://openchargemap.org/app/" data-localize="ocm.infoText.searching.webApp" class="alert-link">Map</a>, <span data-localize="ocm.infoText.searching.searchAppStore">especially on mobile devices. You can also search your device App Store for a version you can carry around.</span>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="well well-sm">
            @Html.Partial("_POISearch", (OCM.MVC.Models.POIBrowseModel)Model)
        </div>

    </div>
    <div class="col-md-6">
        @if (ViewBag.FormattedAddress != null)
        {
            <div><strong>Searching location: @ViewBag.FormattedAddress</strong></div>
        }

        @Html.Partial("_POIList", Model.POIList)


    </div>

</div>
